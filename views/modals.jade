
.modal.fade(id="login-modal", tabindex="-1", role="dialog", aria-labelledby="login-modal-label")
  .modal-dialog(role="document")
    .modal-content
      .modal-header
        button(type="button", class="close", data-dismiss="modal", aria-label="Close")
          span(aria-hidden="true" ) &times;
        h4.modal-title(id="login-modal-label") login
      .modal-body
        .form-group(id='login-modal-form-group-username')
          input.form-control(placeholder='username', id='login-modal-username')
          span.help-block(id='login-modal-username-help-block')
        .form-group(id='login-modal-form-group-password')
          input.form-control(placeholder='password', id='login-modal-password')
          span.help-block(id='login-modal-password-help-block')
        .form-group
          button.btn.btn-primary(type="button", id='login-submit') login
      .modal-footer
        span(id='login-modal-footer-span')